#!/bin/bash

mySeed=$1
nEvts=$2
JobName=TTtoAnything_14TeV_pythia6_cff_GEN_SIM_${nEvts}_evts_seed_$mySeed

echo  "Job started at " `date`

CMSSW_DIR=${CMSSW_BASE}/src/MyTest/ExtendedPhaseIPixel
LXBATCH_DIR=$PWD

cd $CMSSW_DIR
eval `scramv1 runtime -sh`
cd $LXBATCH_DIR

cp ${CMSSW_DIR}/TTtoAnything_14TeV_pythia6_cff_py_GEN_SIM_forPhaseI_TEMPL.py .
echo "cmsRun ${CMSSW_DIR}/TTtoAnything_14TeV_pythia6_cff_py_GEN_SIM_forPhaseI_TEMPL.py"

cmsRun TTtoAnything_14TeV_pythia6_cff_py_GEN_SIM_forPhaseI_TEMPL.py myseed=${mySeed} maxEvents=${nEvts} >& ${JobName}.out

echo "Content of working directory is: " `ls -lrt`

cmsStage step1_TTtoAnything_${nEvts}_evts_seed_${mySeed}.root /store/caf/user/emiglior/SLHCSimPhase2/620_slhc11/ExtendedPhaseIPixel
cp ${JobName}.out ${CMSSW_DIR}/outfiles

echo  "Job ended at " `date`

exit 0
